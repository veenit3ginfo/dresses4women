{{ 'do-go-back.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="page-width">
    <div class="section-{{ section.id }}-padding">
    <div class="do__go-back_btn do-flex">
        {% if section.settings.do__show_on_product_page  %}
            {% if collection.url %}
                {% assign bkcol = collection.title %}    
                {% render 'icon-back' %}
                {{ "Back to " | append: bkcol | link_to: collection.url }}
            {% else %}
                {% for collection in product.collections %}
                    {% if forloop.index < 2 %}
                        {% assign bkcol = collection.title %}    
                        {% render 'icon-back' %}
                        {{ "Back to " | append: bkcol | link_to: collection.url }}
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endif %}
        {% unless section.settings.do__show_on_product_page %}
            {% render 'icon-back' %}
            <a href="{{section.settings.do__go_back_text}}">{{section.settings.do__go_back_text}}</a>
        {% endunless %}
    </div>
</div>
</div>

{% schema %}
    {
        "name": "Go Back Button",
        "disabled_on": {
            "groups": ["header", "footer"]
          },
        "settings": [
            {
                "type": "checkbox",
                "id": "do__show_on_product_page",
                "label": "Show on Product Page",
                "default": false
            },
            {
                "type": "header",
                "content": "If not on the product page"
            },
            {
                "type": "text",
                "id": "do__go_back_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "do__go-back-link",
                "label": "Button Link"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 36
              },
              {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 36
              }
        ],
        "presets": [
            {
              "name": "Go back button"
            }
        ]
    }
{% endschema %}
